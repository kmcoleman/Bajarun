rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Registrations - authenticated users can read all
    match /registrations/{registrationId} {
      // Admin UID
      function isAdmin() {
        return request.auth.uid == 'kGEO7bTgqMMsDfXmkumneI44S9H2';
      }

      allow read: if request.auth != null;
      // Admin can create registrations for any user, users can only create their own
      allow create: if request.auth != null &&
                       (isAdmin() || request.auth.uid == request.resource.data.uid);

      // Update rules:
      // - Admin can update any registration (for recording deposits, etc.)
      // - Users can update their own registration BUT cannot change amtCollected
      allow update: if request.auth != null &&
                       (isAdmin() ||
                        (request.auth.uid == resource.data.uid &&
                         (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['amtCollected']))));

      allow delete: if false; // No deletes allowed
    }

    // Tours - public listing of available tours
    match /tours/{tourId} {
      // Anyone can read tours (public events page)
      allow read: if true;
      // Only admin can create, update, or delete tours
      allow write: if request.auth != null &&
                      request.auth.uid == 'kGEO7bTgqMMsDfXmkumneI44S9H2';
    }

    // Discussion posts - only registered users can read/write
    // Registration check is done in the app; rules ensure user owns their posts
    match /discussionPosts/{postId} {
      // Helper function to check if user is registered
      function isRegistered() {
        return exists(/databases/$(database)/documents/registrations/$(request.auth.uid)) ||
               get(/databases/$(database)/documents/registrations/$(request.auth.uid)).data.uid == request.auth.uid;
      }

      // Only authenticated users can read (frontend checks registration)
      allow read: if request.auth != null;

      // Create: must be authenticated and authorUid must match
      allow create: if request.auth != null &&
                       request.resource.data.authorUid == request.auth.uid;

      // Update: must be authenticated (for likes/replies from any registered user)
      allow update: if request.auth != null;

      // Delete: only author can delete
      allow delete: if request.auth != null &&
                       resource.data.authorUid == request.auth.uid;
    }

    // Legacy discussion posts (old collection, keep for backwards compat)
    match /discussions/{postId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.authorId;
      allow update: if request.auth != null && request.auth.uid == resource.data.authorId;
      allow delete: if request.auth != null && request.auth.uid == resource.data.authorId;

      // Comments subcollection
      match /comments/{commentId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null && request.auth.uid == request.resource.data.authorId;
        allow update: if request.auth != null && request.auth.uid == resource.data.authorId;
        allow delete: if request.auth != null && request.auth.uid == resource.data.authorId;
      }
    }

    // Admin collection - only admins can read/write
    match /admins/{adminId} {
      allow read, write: if false; // Managed via console only
    }

    // Announcements - authenticated users can read, only admin can write
    match /announcements/{announcementId} {
      allow read: if request.auth != null;
      // Only admin (Kevin) can create, update, or delete announcements
      allow create, update, delete: if request.auth != null &&
                                       request.auth.uid == 'kGEO7bTgqMMsDfXmkumneI44S9H2';
    }

    // Event Configuration - authenticated users can read, only admin can write
    match /eventConfig/{configId} {
      allow read: if request.auth != null;
      // Only admin can create, update, or delete event config
      allow create, update, delete: if request.auth != null &&
                                       request.auth.uid == 'kGEO7bTgqMMsDfXmkumneI44S9H2';
    }

    // Email Templates - only admin can read/write
    match /emailTemplates/{templateId} {
      allow read, write: if request.auth != null &&
                            request.auth.uid == 'kGEO7bTgqMMsDfXmkumneI44S9H2';
    }

    // NEW EMAIL SYSTEM (isolated - delete these rules to remove)
    // Email Triggers - only admin can read/write
    match /emailTriggers/{triggerId} {
      allow read, write: if request.auth != null &&
                            request.auth.uid == 'kGEO7bTgqMMsDfXmkumneI44S9H2';
    }

    // Email Log - only admin can read, cloud functions write
    match /emailLog/{logId} {
      allow read: if request.auth != null &&
                     request.auth.uid == 'kGEO7bTgqMMsDfXmkumneI44S9H2';
      allow write: if false; // Only cloud functions can write
    }

    // Users collection - for terms acceptance, accommodation selections, and preferences
    match /users/{userId} {
      // Users can read their own document
      allow read: if request.auth != null && request.auth.uid == userId;

      // Users can create their own document
      allow create: if request.auth != null && request.auth.uid == userId;

      // Users can update their own document
      allow update: if request.auth != null && request.auth.uid == userId;

      // Users cannot delete their document
      allow delete: if false;

      // Admin can read/write all user documents (full access)
      allow read, write: if request.auth != null &&
                            request.auth.uid == 'kGEO7bTgqMMsDfXmkumneI44S9H2';

      // Blocked users subcollection - users can manage their own blocked list
      match /blockedUsers/{blockedUserId} {
        // Users can read their own blocked list
        allow read: if request.auth != null && request.auth.uid == userId;
        // Users can add/remove from their own blocked list
        allow write: if request.auth != null && request.auth.uid == userId;
        // Admin can read all blocked lists
        allow read: if request.auth != null &&
                       request.auth.uid == 'kGEO7bTgqMMsDfXmkumneI44S9H2';
      }
    }

    // Content Reports - for flagging inappropriate content (App Store requirement)
    match /contentReports/{reportId} {
      // Users can create reports (must be their own report)
      allow create: if request.auth != null &&
                       request.resource.data.reportedBy == request.auth.uid;
      // Users cannot read or modify reports (only admin)
      allow read, update, delete: if request.auth != null &&
                                     request.auth.uid == 'kGEO7bTgqMMsDfXmkumneI44S9H2';
    }

    // Participants collection - for roster (PWA reads this)
    match /participants/{participantId} {
      // All authenticated users can read (for roster view)
      allow read: if request.auth != null;
      // Only admin can write
      allow write: if request.auth != null &&
                      request.auth.uid == 'kGEO7bTgqMMsDfXmkumneI44S9H2';
    }

    // Accommodation Selections - users can read/write their own
    match /accommodationSelections/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Admin can read all
      allow read: if request.auth != null &&
                     request.auth.uid == 'kGEO7bTgqMMsDfXmkumneI44S9H2';
    }

    // FCM Tokens - for push notifications
    match /fcmTokens/{userId} {
      // Users can write their own token
      allow write: if request.auth != null && request.auth.uid == userId;
      // Admin can read all tokens (for sending notifications)
      allow read: if request.auth != null &&
                     request.auth.uid == 'kGEO7bTgqMMsDfXmkumneI44S9H2';
    }

    // Config collection - for event configuration
    match /config/{configId} {
      // Terms config needs to be readable before auth (for terms agreement screen)
      allow read: if configId == 'terms' || request.auth != null;
      // Only admin can write
      allow write: if request.auth != null &&
                      request.auth.uid == 'kGEO7bTgqMMsDfXmkumneI44S9H2';
    }

    // Ledger collection - for tracking charges and payments per user
    match /ledger/{userId} {
      // Users can read their own ledger (for viewing statements)
      allow read: if request.auth != null && request.auth.uid == userId;
      // Admin can read all ledgers
      allow read: if request.auth != null &&
                     request.auth.uid == 'kGEO7bTgqMMsDfXmkumneI44S9H2';
      // Only admin can write to ledgers
      allow write: if request.auth != null &&
                      request.auth.uid == 'kGEO7bTgqMMsDfXmkumneI44S9H2';

      // Charges subcollection
      match /charges/{chargeId} {
        allow read: if request.auth != null &&
                       (request.auth.uid == userId ||
                        request.auth.uid == 'kGEO7bTgqMMsDfXmkumneI44S9H2');
        allow write: if request.auth != null &&
                        request.auth.uid == 'kGEO7bTgqMMsDfXmkumneI44S9H2';
      }

      // Payments subcollection
      match /payments/{paymentId} {
        allow read: if request.auth != null &&
                       (request.auth.uid == userId ||
                        request.auth.uid == 'kGEO7bTgqMMsDfXmkumneI44S9H2');
        allow write: if request.auth != null &&
                        request.auth.uid == 'kGEO7bTgqMMsDfXmkumneI44S9H2';
      }
    }

    // Events collection - for tour media and feedback
    match /events/{eventId} {
      allow read: if request.auth != null;

      // Routes subcollection - daily route configurations with POIs
      // Public read access for itinerary page
      match /routes/{routeId} {
        // Anyone can read routes (for public itinerary page)
        allow read: if true;
        // Only admin can write routes
        allow write: if request.auth != null &&
                        request.auth.uid == 'kGEO7bTgqMMsDfXmkumneI44S9H2';
      }

      // Room Inventory subcollection - available rooms per day
      match /roomInventory/{roomId} {
        // All authenticated users can read room inventory
        allow read: if request.auth != null;
        // Only admin can write room inventory
        allow write: if request.auth != null &&
                        request.auth.uid == 'kGEO7bTgqMMsDfXmkumneI44S9H2';
      }

      // Room Assignments subcollection - who is assigned to which room
      match /roomAssignments/{dayId} {
        // All authenticated users can read room assignments (to see their assignment)
        allow read: if request.auth != null;
        // Only admin can write room assignments
        allow write: if request.auth != null &&
                        request.auth.uid == 'kGEO7bTgqMMsDfXmkumneI44S9H2';
      }

      // Media subcollection - photos and videos shared by riders
      match /media/{mediaId} {
        // All authenticated users can read media
        allow read: if request.auth != null;
        // Authenticated users can create media (must be their own upload)
        allow create: if request.auth != null &&
                         request.resource.data.uploadedBy == request.auth.uid;
        // Users can update their own media (for likes), admin can update all
        allow update: if request.auth != null;
        // Only uploader or admin can delete
        allow delete: if request.auth != null &&
                         (resource.data.uploadedBy == request.auth.uid ||
                          request.auth.uid == 'kGEO7bTgqMMsDfXmkumneI44S9H2');
      }

      // Feedback subcollection - tour reviews and feedback
      match /feedback/{feedbackId} {
        // Admin can read all feedback
        allow read: if request.auth != null &&
                       request.auth.uid == 'kGEO7bTgqMMsDfXmkumneI44S9H2';
        // Users can read public reviews
        allow read: if request.auth != null && resource.data.isPublic == true;
        // Users can create feedback (must be their own)
        allow create: if request.auth != null &&
                         request.resource.data.userId == request.auth.uid;
        // Users can update their own feedback
        allow update: if request.auth != null &&
                         resource.data.userId == request.auth.uid;
        // Only admin can delete feedback
        allow delete: if request.auth != null &&
                         request.auth.uid == 'kGEO7bTgqMMsDfXmkumneI44S9H2';
      }
    }

    // Products collection - store merchandise
    match /products/{productId} {
      // All authenticated users can read products
      allow read: if request.auth != null;
      // Only admin can create, update, or delete products
      allow write: if request.auth != null &&
                      request.auth.uid == 'kGEO7bTgqMMsDfXmkumneI44S9H2';
    }

    // Waitlist collection - for users who missed registration
    match /waitlist/{waitlistId} {
      // Anyone can create a waitlist entry (no auth required)
      allow create: if true;
      // Only admin can read, update, or delete
      allow read, update, delete: if request.auth != null &&
                                     request.auth.uid == 'kGEO7bTgqMMsDfXmkumneI44S9H2';
    }

    // Orders collection - store purchases
    match /orders/{orderId} {
      // Users can read their own orders
      allow read: if request.auth != null &&
                     resource.data.userId == request.auth.uid;
      // Admin can read all orders
      allow read: if request.auth != null &&
                     request.auth.uid == 'kGEO7bTgqMMsDfXmkumneI44S9H2';
      // Users can create orders (must be their own)
      allow create: if request.auth != null &&
                       request.resource.data.userId == request.auth.uid;
      // Only admin or Cloud Functions can update orders (for status updates)
      allow update: if request.auth != null &&
                       request.auth.uid == 'kGEO7bTgqMMsDfXmkumneI44S9H2';
      // No deletes allowed
      allow delete: if false;
    }
  }
}
